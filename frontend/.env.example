DEV_TENANT_HOST=cap-tenant.quvel.127.0.0.1.nip.io
PROD_HOST=0.0.0.0

# Development Ports
SSR_DEV_PORT=3000
SPA_DEV_PORT=3001
CAPACITOR_DEV_PORT=3002
ELECTRON_DEV_PORT=3003
PWA_DEV_PORT=3004

# Vite HMR Ports
SSR_VITE_PORT=9001
SPA_VITE_PORT=9002
PWA_VITE_PORT=9003

# Production Ports
SSR_PROD_PORT=3000

# App Configuration
APP_ID=quvel.irv.codes
APP_SHORT_NAME=QuVel

# HMR Configuration
HMR_HOSTNAME=quvel.127.0.0.1.nip.io
HMR_CLIENT_PORT=443

# Allowed Hosts (comma-separated)
