# Build Environment
LOCAL=1

# Needs to stay in SSR only do not add VITE_
SSR_TENANT_SSR_PRELOAD_TENANTS=true
SSR_TENANT_SSR_RESOLVER_TTL=300
SSR_TENANT_SSR_CACHE_TTL=300
SSR_TENANT_SSR_API_URL="https://api.quvel.127.0.0.1.nip.io"
SSR_API_KEY=your_secure_ssr_api_key
SSR_ENABLE_CACHE=true
SSR_MULTI_TENANT=true
SSR_AXIOS_TIMEOUT=2500
SSR_AXIOS_MAX_REDIRECTS=0

# Adds logs to Axios requests and responses
VITE_AXIOS_INTERCEPTORS=true

VITE_RECAPTCHA_KEY=

# Authentication Configuration
# Enable/disable authentication guard boot file
VITE_AUTH_GUARD_ENABLED=false
# Require authentication by default for all routes (can be overridden per route)
VITE_REQUIRE_AUTH_BY_DEFAULT=false
# Route name to redirect to for login (typically landing page with login dialog)
VITE_AUTH_LOGIN_ROUTE=landing
# Route name to redirect to after successful login
VITE_AUTH_SUCCESS_ROUTE=dashboard
# Public config API for non-SSR modes (SPA, PWA, Capacitor)
VITE_PUBLIC_CONFIG_ENABLED=true

SSR_PWA=true
