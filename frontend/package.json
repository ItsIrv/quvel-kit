{
  "name": "quvel-kit",
  "version": "0.1.3-beta",
  "description": "QuVel Kit: A Laravel & Quasar hybrid starter kit.",
  "productName": "QuVel Kit",
  "author": "Irving Gomez <gomirv.work@gmail.com>",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint -c ./eslint.config.js \"./src*/**/*.{ts,js,cjs,mjs,vue}\"",
    "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
    "test": "echo \"See package.json => scripts for available tests.\" && exit 0",
    "dev": "quasar dev",
    "dev:ssr": "quasar dev -m ssr",
    "dev:pwa": "quasar dev -m pwa",
    "dev-local": "LOCAL=1 quasar dev",
    "dev-local:ssr": "LOCAL=1 VITE_REQUIRE_AUTH_BY_DEFAULT=true VITE_AUTH_GUARD_ENABLED=true quasar dev -m ssr",
    "dev-local:pwa": "LOCAL=1 quasar dev -m pwa",
    "dev:ios": "LOCAL=1 quasar dev -m capacitor -T ios",
    "dev:electron": "LOCAL=1 quasar dev -m electron",
    "build": "quasar build",
    "build:ssr": "quasar build -m ssr",
    "build:pwa": "quasar build -m pwa",
    "start:ssr": "node dist/ssr/index.js",
    "serve:pwa": "quasar serve dist/pwa",
    "postinstall": "quasar prepare",
    "test:unit:ui": "vitest --ui",
    "test:unit": "vitest",
    "test:unit:ci": "vitest run",
    "icons:generate": "icongenie generate -p config/icongenie.json",
    "icons:generate-all": "icongenie generate -p config/icongenie.json --mode all",
    "icons:verify": "icongenie verify",
    "icons:profile": "icongenie profile",
    "icons:create-profile": "icongenie profile -o config/icongenie-custom.json"
  },
  "dependencies": {
    "@fastify/compress": "^8.0.1",
    "@fastify/middie": "^9.0.3",
    "@fastify/static": "^8.1.1",
    "@quasar/extras": "^1.16.4",
    "@tailwindcss/postcss": "^4.0.9",
    "axios": "^1.12.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "fastify": "^5.3.2",
    "helmet": "^8.1.0",
    "highlight.js": "^11.11.1",
    "laravel-echo": "^2.0.2",
    "pinia": "^2.0.11",
    "pusher-js": "^8.4.0",
    "quasar": "^2.16.0",
    "register-service-worker": "^1.7.2",
    "uuid": "^11.1.0",
    "vue": "^3.4.18",
    "vue-i18n": "^9.14.3",
    "vue-router": "^4.0.12",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@electron/packager": "^18.3.2",
    "@eslint/js": "^9.14.0",
    "@intlify/unplugin-vue-i18n": "^2.0.0",
    "@quasar/app-vite": "^2.0.0",
    "@quasar/icongenie": "^4.0.0",
    "@quasar/quasar-app-extension-testing-unit-vitest": "^1.1.0",
    "@types/cors": "^2.8.18",
    "@types/node": "^20.5.9",
    "@vitest/ui": "^2.0.5",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.1.3",
    "@vue/test-utils": "^2.4.4",
    "autoprefixer": "^10.4.20",
    "electron": "^34.3.0",
    "eslint": "^9.14.0",
    "eslint-plugin-vue": "^9.30.0",
    "globals": "^15.12.0",
    "postcss": "^8.5.3",
    "prettier": "^3.3.3",
    "tailwindcss": "^4.0.9",
    "typescript": "~5.5.3",
    "vite-plugin-checker": "^0.8.0",
    "vitest": "^3.0.0",
    "vue-tsc": "^2.0.29",
    "webpack-cli": "^6.0.1",
    "workbox-build": "^7.0.0",
    "workbox-cacheable-response": "^7.0.0",
    "workbox-core": "^7.0.0",
    "workbox-expiration": "^7.0.0",
    "workbox-precaching": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0"
  },
  "engines": {
    "node": "^28 || ^26 || ^24 || ^22 || ^20 || ^18",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  }
}
