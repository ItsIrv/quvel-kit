# Quvel Core Package Configuration

# ============================================================================
# Captcha Configuration (reCAPTCHA v3)
# ============================================================================
CAPTCHA_ENABLED=true
CAPTCHA_PROVIDER=recaptcha_v3
CAPTCHA_TIMEOUT=30

# Get these from https://www.google.com/recaptcha/admin
RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here
RECAPTCHA_SCORE_THRESHOLD=0.5

# ============================================================================
# Security Configuration
# ============================================================================
SECURITY_API_KEY=your_internal_api_key_here
SECURITY_TRUSTED_IPS="127.0.0.1,::1"
SECURITY_DISABLE_IP_CHECK=false
SECURITY_DISABLE_KEY_CHECK=false

# ============================================================================
# Frontend Integration
# ============================================================================
FRONTEND_URL=http://localhost:3000
# For mobile/desktop apps, set custom URL scheme (optional)
# FRONTEND_CUSTOM_SCHEME=myapp

# ============================================================================
# Locale Configuration
# ============================================================================
LOCALE_ALLOWED="en,es,fr"
LOCALE_FALLBACK=en
LOCALE_NORMALIZE=true

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_CHANNEL=stack
LOG_INCLUDE_TRACE_ID=true
LOG_CONTEXT_ENRICHMENT=true
LOG_SANITIZE_SENSITIVE=true

# ============================================================================
# Distributed Tracing
# ============================================================================
TRACING_ENABLED=true

# ============================================================================
# Custom HTTP Headers (optional - uses defaults if not set)
# ============================================================================
# HEADER_TRACE_ID=X-Custom-Trace-ID
# HEADER_PLATFORM=X-Custom-Platform
# HEADER_SSR_KEY=X-Custom-SSR-Key