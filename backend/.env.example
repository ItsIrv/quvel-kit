APP_NAME=QuVel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=https://api.quvel.127.0.0.1.nip.io

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration (MySQL via Docker)
DB_CONNECTION=mysql
DB_HOST=quvel-mysql
DB_PORT=3306
DB_DATABASE=quvel
DB_USERNAME=quvel_user
DB_PASSWORD=quvel_password

# Session & Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.127.0.0.1.nip.io
# SESSION_DOMAIN=quvel.192.168.86.20.nip.io // REPLACE_WITH_LOCAL_IP

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=quvel_

MEMCACHED_HOST=127.0.0.1

# Redis (Docker)
REDIS_CLIENT=phpredis
REDIS_HOST=quvel-redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (if needed)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Frontend Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_API_URL="https://api.quvel.127.0.0.1.nip.io"
VITE_APP_URL="https://quvel.127.0.0.1.nip.io"

# Telescope Configuration
TELESCOPE_ENABLED=false
TELESCOPE_PATH=telescope
TELESCOPE_DRIVER=database
